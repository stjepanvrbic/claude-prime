{
  "description": "Context priming hooks - manages session priming state and auto-priming",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'bash \"${CLAUDE_PLUGIN_ROOT//\\\\//}/hooks/scripts/session-start.sh\"'",
            "timeout": 5
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'bash \"${CLAUDE_PLUGIN_ROOT//\\\\//}/hooks/scripts/auto-prime-check.sh\"'",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
